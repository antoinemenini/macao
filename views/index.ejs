<!DOCTYPE html>
<!-- https://getbootstrap.com/docs/4.1/examples/dashboard/ -->
<html>
<head>
  <title>Play Macao</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="all.min.css">
  <style type="text/css">
    .red{
      color: #dc3545;
    }
    .blue{
      color: #007bff;
    }
    .yellow{
      color: #ffc107;
    }
    .green{
      color: #28a745;
    }
    .black{
      color: #000000;
    }
  </style>

</head>
<body>


  <div class="container">
    <div class="row">
      <div class="col-lg-9 col-sm-12">

        <div id="cannotJoin" style="display: none;">
          <h1>You cannot join the game!</h1>
          <div class="alert alert-danger" role="alert">The game has already started or the maximum number of players has been reached.</div>
        </div>

        <div class="row" id="startRow">
          <div class="col-sm-12">
            
            <form id="formName2">
              <div class="form-group row">
                <label for="inputName2" class="col-sm-3.5 col-form-label">Enter your name here:</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" id="inputName2">
                </div>
                <div class="col-sm-5.5">
                  <button type="submit" class="btn btn-secondary">Save name</button>
                </div>
              </div>
            </form>

            <div class="align-middle">  
              <button type="button" class="btn btn-secondary" id="startGameButton"><i class="fas fa-play"></i> Start Game</button>
              Wait for every player before starting the game.
            </div>
            
          </div>
        </div>

        <div class="row align-middle showAfterStart" style="display: none;">  
          <button type="button" class="btn btn-secondary" id="rollDice"><i class="fas fa-play"></i> Roll the dice</button>
          <p id="messageToWait"></p>
          <div id="rolledDice"></div>
        </div>

        <div id="roundOver" style="display: none;">
          <h1>Round over!</h1>
          <div>
            <button type="button" class="btn btn-secondary" id="startNextRound"><i class="fas fa-play"></i> Start next round</button>
          </div>
        </div>

        <div id="gameOver" style="display: none;">
          <h1>Game Over!</h1>
        </div>

        <table class="table" id="tableScore" style="display: none;"></table>

        <div class="row showAfterStart" id="casinosRow" style="display: none;">
        </div>

<% if("admin" in context.req.query && context.req.query.admin == "true"){ %>
        <div class="row" id="adminPanel">
          <button type="button" class="btn btn-danger" id="resetGame"><i class="fas fa-redo"></i> Reset game</button>
        </div>
<% } %>
      </div>
      <div class="col-lg-3 col-sm-12">
        <h4 id="roundNumber"></h4>

        <div id="players" style="margin-top: 30px;">
          <h3>Players</h3>

          <table class="table" id="playersList">
          </table>
        </div>
      </div>
    </div>      
    </div>
  </div>


  <div class="modal fade" id="nameModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <form id="formName">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit user</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">     
            <div class="form-group row">
              <label for="inputName" class="col-sm-2 col-form-label">Name</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="inputName">
              </div>
            </div>
                
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>





  <script src="jquery.min.js"></script>
  <script src="popper.min.js"></script>
  <script src="bootstrap.min.js"></script>
  <script src="all.min.js"></script>
  <script src="js.cookie.js"></script> <!-- https://github.com/js-cookie/js-cookie -->


  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>